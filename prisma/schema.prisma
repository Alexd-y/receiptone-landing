generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  email             String
  name              String?
  persona           String?
  consentMarketing  Boolean  @default(false)
  consentAnalytics  Boolean  @default(false)
  source            String?
  userAgent         String?
  ipHash            String?
  country           String?
  message           String?

  @@index([createdAt])
  @@index([email])
}
